@model Dsana.Models.ViewModels.AssignDeveloperViewModel;

<div class="container">
    <h2>Assign Developer for</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.DTask.Title</h3>
            <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.DTask.ProjectId">@Model.DTask.Project.Name</a>
            <div class="card">
                <div class="card-header">
                    <label class="control-label">Assign Developer</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignDeveloper" asp-controller="DTasks">
                        <input asp-for="DTask.Id" hidden/>
                        <p>Description: @Model.DTask.Description</p>

                        <div class="form-group">
                            <label class="col-form-label">Select Developers</label>

                            <select required asp-for="DeveloperId" class="form-control" asp-items="@Model.Developers">
                                <option></option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="assign" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="UnassignedDTasks" asp-controller="DTasks">UnassignedDTasks</a>
    </div>

</div>